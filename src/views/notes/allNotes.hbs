<div class="row">
    {{#each notes}}
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between aling-items-center">{{title}}
                        <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i>
                    </h4></a>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input name="_method" value="DELETE" type='hidden' />
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
    <hr>
    {{!-- <h6>Fecha creaci&oacute;n:</h6>{{createdAt}} --}}
</div>