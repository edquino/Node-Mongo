<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <div class="card-body">
                <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="_method" value="PUT">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" value="{{note.title}}">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="description">{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    </div>
                    <div class="form-group">
                        <a href="/notes" class="btn btn-secondary btn-block">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>